#!/usr/bin/env bash

# External code configurations -> uncomment this block and change the vendor and module names accordingly
#M2SETUP_REPO=git@github.com:<vendor>/<repo>.git
#M2SETUP_REQUIRE=<vendor1>/<repo1> <vendor2>/<repo2>=<version> <vendor3>/<repo3>=branch

M2SETUP_REPO="https://github.com/dianabotean/redirecttosku.git"
M2SETUP_REQUIRE="dianabotean/redirecttosku"
bin/composer config repositories.dianabotean-redirecttosku git $M2SETUP_REPO
bin/composer require $M2SETUP_REQUIRE

bin/copyfromcontainer --all
